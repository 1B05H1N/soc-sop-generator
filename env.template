# Confluence Configuration Template
# Copy this file to .env.confluence and fill in your actual values
# NEVER commit the actual .env.confluence file to version control

# Confluence Instance URL (without /wiki)
CONFLUENCE_URL=https://your-domain.atlassian.net

# Confluence Username (email address)
CONFLUENCE_USERNAME=your-email@your-domain.com

# Confluence API Token (generate at https://id.atlassian.com/manage-profile/security/api-tokens)
CONFLUENCE_API_TOKEN=your-api-token-here

# Confluence Space Key (found in your Confluence URL)
CONFLUENCE_SPACE_KEY=YOUR_SPACE_KEY

# Confluence Folder ID (optional - for organizing SOPs in folders)
CONFLUENCE_FOLDER_ID=your-folder-id-here

# SOP Author Information
SOP_AUTHOR=Your Name
SOP_CONTACT_EMAIL=your-email@your-domain.com
SOP_ORGANIZATION=Your Organization

# GitHub Information (optional)
SOP_GITHUB_URL=https://github.com/your-username

# Security Settings
# Set to true to enable additional security checks
ENABLE_SECURITY_CHECKS=true

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO 